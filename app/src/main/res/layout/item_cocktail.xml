<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cocktailImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/cocktailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="caca byby"
        android:textSize="25sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/cocktailImage"
        app:layout_constraintTop_toTopOf="@id/cocktailImage"/>

    <TextView
        android:id="@+id/cocktailAlcohol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="non alcoholic"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/cocktailImage"
        app:layout_constraintTop_toBottomOf="@id/cocktailName"/>


</androidx.constraintlayout.widget.ConstraintLayout>